#slideshow div.image {
  position: absolute;
  top: 0
  left: 0;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-position: center;
  <% if @image_loader.stretch == 'fit' %>
  background-size: contain;
  <% else %>
  background-size: cover;
  <% end %>
}
header {
  font-family: Arial, Helvetica, sans-serif;
